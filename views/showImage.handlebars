<div>
    <div class="panel panel-primary">
        <div class="panel-heading">
            <form style="display:inline;" id="delete-form" action="/image/{{image.linkId}}?_method=DELETE" method="POST">
                <button class="btn btn-danger btn-xs pull-right" ><i class="fa fa-times" aria-hidden="true"></i></button>
            </form>
            <h3 class="panel-title">{{image.title}}</h3>
        </div>
        <div class="panel-body">
            <a href="#" class="thumbnail" style="border:none">
                <img src="/uploads/{{image.filename}}">
            </a>
            <p>{{image.description}}</p>
        </div>
        <div class="panel-footer">
            <button id="updateLikes" type="button" class="btn btn-default">
            <span class="like">
                <i class="fa fa-thumbs-o-up" aria-hidden="true">
                    Like
                </i>

            </span>
            <span id="like-counter"class="label label-primary">{{image.likes}}</span>
        </button>


        </div>
    </div>
    <button id="comment-button" style="padding-bottom: 8px; padding-top: 15px; height: 100%; text-align: center; margin: auto;" type="submit" class="btn btn-default  btn-sm pull-right ">
        <i class="fa fa-comment-o" aria-hidden="true"> Comment</i>
    </button>
    <div class="panel panel-default">

        <div class="panel-heading" style="background: : white; ">
            <h3 class="panel-title">Comments</h3>

        </div>
        <div class="panel-body comment-section">
            <div class="row">
                <form id="comment-form" method="post" action="/image/{{ image.linkId }}/comment">
                    <div class="form-group col-sm-12">
                        <label class="col-sm-2 control-label" for="comment">Comment:</label>
                        <div class="col-sm-10">
                            <textarea class="form-control" name="comment" rows="3"></textarea>
                        </div>
                    </div>
                    <div class="form-group col-sm-12">
                        <div class="col-sm-12 text-right">
                            <button type="submit" id="comment-btn" class="btn btn-success" type="button"> <i class="fa fa-comment"></i> Post</button>
                        </div>
                    </div>
                </form>
            </div>
            <hr class="style14">
            <ul class="media-list comment-list">

                {{#each image.comments}}
                    <li class="media comment-group">
                        <div class="media-left">

                            <a href="#">
                                <span class="username">{{username}}</span>
                                <img class="media-object comment-gravatar" src="{{gravatarImg}}" alt="...">
                            </a>

                        </div>
                        <div class="media-body">
                            <p class="comment-text">{{text}}</p>
                            <small class="text-muted pull-right"> {{timeago timestamp }}</small>
                        </div>
                    </li>
                {{/each}}
            </ul>
        </div>
    </div>
</div>
